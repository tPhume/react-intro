{
  "extends": [
      "airbnb",
      "plugin:prettier/recommended",
      "prettier/react"
    ],
  "plugins": [
    "react-hooks"
  ],
  "rules": {
    "react/prop-types": 0,
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  },
  "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
  "settings": {
    "react": "detect"
  }
}
